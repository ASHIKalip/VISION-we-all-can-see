<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.Navigation"
    tools:context=".Navigation.Navigation">

    <TextView
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/rushikesh"
        android:gravity="center"
        android:text="Swipe right and say the name of destination. Our application will navigate to that destination"
        android:textColor="@color/white"
        android:textSize="50dp" />
</RelativeLayout>
